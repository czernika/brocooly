{
    "name": "czernika/brocooly",
    "description": "WordPress Timber-based boilerplate with Bedrock structure and webpack for assets compiling",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ihar Aliakseyenka",
            "email": "aliha.devs@gmail.com"
        }
    ],
    "repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
		}
	],
    "minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": ">=7.4",
		"composer/installers": "^1.10",
		"vlucas/phpdotenv": "^5.3",
		"oscarotero/env": "^2.1",
		"roots/bedrock-autoloader": "^1.0",
		"roots/wordpress": "5.7.2",
		"roots/wp-config": "1.0.0",
		"roots/wp-password-bcrypt": "1.0.0",
		"mnsami/composer-custom-directory-installer": "^2.0",
		"htmlburger/carbon-fields": "^3.2",
		"wpackagist-plugin/kirki": "^3.1",
		"wpackagist-plugin/query-monitor": "^3.6",
  		"timber/timber": "^1.18",
        "hellonico/twig-dump-extension": "^1.1",
        "php-di/php-di": "^6.3",
        "illuminate/collections": "^8.45",
        "illuminate/support": "^8.49",
        "webmozart/assert": "^1.10",
        "filp/whoops": "^2.13"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.5.8",
		"roave/security-advisories": "dev-master",
		"wp-coding-standards/wpcs": "^2.3.0",
		"friendsoftwig/twigcs": "^5.0"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist"
	},
	"extra": {
		"installer-paths": {
			"web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
			"web/app/plugins/{$name}/": ["type:wordpress-plugin"],
			"web/app/themes/{$name}/": ["type:wordpress-theme"],
			"web/app/vendor/{$vendor}/{$name}": ["htmlburger/carbon-fields"]
		},
		"wordpress-install-dir": "web/wp"
	},
	"scripts": {
		"post-root-package-install": [
      		"php -r \"copy('.env.example', '.env');\""
    	]
	}
}
