{
    "name": "czernika/brocooly",
    "type": "project",
    "description": "WordPress Timber-based boilerplate with Bedrock structure and webpack for assets compiling",
    "license": "MIT",
    "authors": [
        {
            "name": "Ihar Aliakseyenka",
            "email": "aliha.devs@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.10",
        "czernika/brocooly-core": "dev-master",
        "mnsami/composer-custom-directory-installer": "^2.0",
        "roots/bedrock-autoloader": "^1.0",
        "roots/wordpress": "5.8.0",
        "roots/wp-config": "1.0.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "wpackagist-plugin/fakerpress": "^0.5.1",
        "wpackagist-plugin/kirki": "^3.1",
        "wpackagist-plugin/query-monitor": "^3.6"
    },
    "require-dev": {
        "brain/monkey": "2.*",
        "ergebnis/composer-normalize": "^2.15",
        "friendsoftwig/twigcs": "^5.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5.8",
        "wp-coding-standards/wpcs": "^2.3.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ],
            "web/app/vendor/{$vendor}/{$name}": [
                "htmlburger/carbon-fields"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "autoload": {
        "psr-4": {
            "Theme\\": "web/app/themes/brocooly/inc"
        },
        "files": [
            "web/app/themes/brocooly/inc/helpers.php"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        },
        {
            "type": "git",
            "url": "https://github.com/czernika/brocooly-core.git"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "db-create": [
            "wp db create"
        ],
        "plugins-activate": [
            "wp plugin activate --all"
        ]
    }
}
