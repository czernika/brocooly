<!-- Post-{{ post.ID }}  -->
<article
	class="{{ post.post_class }} w-full h-auto"
	id="post-{{ post.ID }}"
	itemscope itemtype="http://schema.org/Article"
>

	<header class="entry-header">
		<h2 class="entry-title" itemprop="headline name">
			<a href="{{ post.link }}" itemprop="url">
				{{ post.title }}
			</a>
		</h2>
	</header>

	<div class="entry-preview" itemprop="description">
		{{ post.preview.length(50).force.read_more(__('Continue Reading', 'brocooly'))|e('wp_kses_post') }}
	</div>

	<footer class="entry-footer">
		<a href="{{ post.link }}">{{ __('Read more', 'brocooly') }}</a>
	</footer>

</article><!-- #post-{{ post.ID }} -->
