<!DOCTYPE html>
<html class="no-js" {{ site.language_attributes }}>
<head>
	<!-- Basic -->
    <meta charset="{{ site.charset }}">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	{% if is_singular and fn('pings_open', queried) %}
    	<link rel="pingback" href="{{ site.pingback_url }}" />
	{% endif %}
    <link rel="profile" href="http://gmpg.org/xfn/11">

	<meta name="msapplication-tap-highlight" content="no">
	<!-- Phones Link Detection -->
	<meta name="format-detection" content="telephone=no">

	<title>{% block title %} {{ site.name }} | {{ site.description }} {% endblock %}</title>

	<!-- Google Fonts -->
	<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
	<script>
		var families = ['Montserrat'];
		WebFont.load({ google: { families: families } });
	</script>

	{% block head %}
		<!-- Prebuild Styles -->
		<link rel="stylesheet" href="{{ theme.link }}/style.css">
	{% endblock %}

	{{ fn('wp_head') }}
</head>
<body
	class="{{ body_class }} flex flex-col h-screen overflow-x-hidden text-base antialiased font-body bg-gray-50"
	itemscope itemtype="http://schema.org/WebPage"
>

	{% block header %}
		{% include '@components/header.twig' %}
	{% endblock %}

    <main
        id="content"
        role="main"
        class="flex-grow w-full h-auto outline-none content"
		tabindex="-1"
    >
        {% block layout %}
		{% endblock %}
    </main>

	{% block footer %}
		{% include '@components/footer.twig' %}
	{% endblock %}

	{{ fn('wp_footer') }}

	{% block scripts %}{% endblock %}
</body>
</html>
