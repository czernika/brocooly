<!DOCTYPE html>
<html class="no-js" {{ site.language_attributes }}>
<head>
	<!-- Basic -->
    <meta charset="{{ site.charset }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="profile" href="http://gmpg.org/xfn/11">

	{% if is_singular and fn('pings_open', queried) %}
    	<link rel="pingback" href="{{ site.pingback_url }}" />
	{% endif %}

	<meta name="msapplication-tap-highlight" content="no">
	<meta name="application-name" content="{{ site.name }}">

	<!-- Phones Link Detection -->
	<meta name="format-detection" content="telephone=no">

	{% if mod('no_cache', false) %}
		<!-- No cache allowed -->
		<meta http-equiv="pragma" content="no-cache">
		<meta http-equiv="cache-control" content="no-cache">
		<meta http-equiv="expires" content="0">
	{% endif %}

	<title>{% block title %} {{ site.name }} | {{ site.description }} {% endblock %}</title>

	<!-- Favicons -->
	<link rel="shortcut icon" href="{{ asset('static/favicon.ico') }}" type="image/x-icon">
	<link rel="icon" href="{{ asset('static/favicon.ico') }}" type="image/x-icon">

	<!-- Google Fonts -->
	<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
	<script>
		var families = ['Roboto'];
		WebFont.load({ google: { families: families } });
	</script>

	{% block head %}
		<!-- Prebuild Styles -->
		<link rel="stylesheet" href="{{ theme.link }}/style.css">
	{% endblock %}

	{{ fn('wp_head') }}
</head>
<body
	class="{{ body_class }} flex flex-col h-screen overflow-x-hidden text-base antialiased font-body bg-gray-50"
	itemscope itemtype="http://schema.org/WebPage"
>

	{% do action('wp_body_open') %}

	{% block header %}
		{% include '@components/header.twig' %}
	{% endblock %}

	<main
		id="content"
		role="main"
		class="flex-grow w-full h-auto outline-none site-main"
		tabindex="-1"
	>
		{% block layout %}{% endblock %}
	</main>

	{% block footer %}
		{% include '@components/footer.twig' %}
	{% endblock %}

	{{ fn('wp_footer') }}

	{% block scripts %}{% endblock %}

	<script src="//instant.page/5.1.0" type="module" integrity="sha384-by67kQnR+pyfy8yWP4kPO12fHKRLHZPfEsiSXR8u2IKcTdxD805MGUXBzVPnkLHw"></script>
</body>
</html>
