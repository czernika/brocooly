{
	"extends": "stylelint-config-sass-guidelines",
	"plugins": [
		"stylelint-scss"
	],
	"rules": {
		"indentation": "tab",
		"at-rule-no-unknown": null,
    	"scss/at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"layer",
					"responsive",
					"screen",
					"tailwind",
					"variants",
					"apply"
				]
			}
		]
	}
}
