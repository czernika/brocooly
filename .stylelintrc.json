{
	"extends": "stylelint-config-sass-guidelines",
	"plugins": [
		"stylelint-scss"
	],
	"rules": {
		"indentation": "tab",
		"at-rule-no-unknown": null,
    	"scss/at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"extend",
					"at-root",
					"debug",
					"warn",
					"error",
					"if",
					"else",
					"for",
					"each",
					"while",
					"mixin",
					"include",
					"content",
					"return",
					"function",
					"tailwind",
					"apply",
					"responsive",
					"variants",
					"screen"
				]
			}
		]
	}
}
